<script>
document.body.onload = function() {
  alert('Ya se ha refrescado la pagina');
}

//BOTON																							
 const hanFetClick = document.getElementById("aqui"); //  Encuentra el elemento de hanFetClick con id "aqui"

  hanFetClick.onclick = miAlerta; // Agrega la función hanFetClick al elemento

  function miAlerta(evento) {    
  let cambiar = document.querySelector('.cambiante2');
    cambiar.style.color = 'red';
  
  }
  
  // Selección de la imagen
const gizmo = document.querySelector('#gizmo');

// Evento de clic para la imagen
gizmo.addEventListener('click', function() {
  // Cambiar el tamaño de la imagen
  gizmo.style.width = '150px';
  gizmo.style.height = '150px';
});
     
</script>

